<%- include('includes/header') %>

<% if (locals.errors) { %>
            <% errors.forEach(function(error){ %>
                  <div class="messageserror"><%= error.msg %></div>
           <% }) %>
      <% } %>
      <%- messages() %>

<div class="w3-row-padding w3-mobile w3-margin-bottom">
  
   <div class="w3-third w3-hide-small">
    <div class="w3-container"> </div>
   </div>

